<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_pressed="true" >
    <shape>
      <gradient
        android:startColor="#d0ffb010"
        android:endColor=  "#a0ffb010"
        android:angle="270" />
      <corners
        android:radius="3dp" />
      <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp" />
    </shape>
  </item>

  <item android:state_focused="true" >
    <shape>
      <gradient
        android:startColor="#d0ffb010"
        android:endColor=  "#a0ffb010"
        android:angle="270" />
      <corners
        android:radius="3dp" />
      <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp" />
    </shape>
  </item>

  <item>        
    <shape>
      <gradient
        android:startColor="#704040d0"
        android:endColor=  "#40202060"
        android:angle="270" />
      <corners
        android:radius="3dp" />
      <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp" />
    </shape>
  </item>

</selector>

