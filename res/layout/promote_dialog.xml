<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/buttonLayout"
  android:layout_width="350px"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:padding="12dip">

  <ScrollView
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:layout_alignParentTop="true"
    android:layout_marginTop="12px"
    android:layout_marginBottom="12px"
    android:layout_marginLeft="8px"
    android:layout_marginRight="7px"
    android:scrollbarSize="0px"
    android:scrollbars="none">

    <LinearLayout 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:gravity="fill"
    >
      <TextView
        android:id="@+id/aboutText"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="8px"
        android:lineSpacingExtra="5sp"
        android:textColor="#eef"
        android:textStyle="bold"
        android:textSize="19sp"
        android:text="Please promote this app. Thank you!!"
        android:layout_marginBottom="16px"
      />
      <TextView
        android:id="@+id/aboutText"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="8px"
        android:lineSpacingExtra="5sp"
        android:textColor="#eef"
        android:textStyle="bold"
        android:textSize="19sp"
        android:text="Compose a message containing a direct Android Market download link:"
        android:layout_marginBottom="16px"
      />

      <Button
        android:id="@+id/buttonPromoteMail"
        android:text="Send by mail"
        android:layout_width="fill_parent"
        android:layout_height="10mm" 
        style="@style/dialogTextAppearence.HighlightButton"
        android:layout_marginBottom="5px"
        android:padding="12dip"
      />

      <Button
        android:id="@+id/buttonPromoteSMS"
        android:text="Send by sms"
        android:layout_width="fill_parent"
        android:layout_height="10mm" 
        style="@style/dialogTextAppearence.HighlightButton"
        android:layout_marginBottom="5px"
        android:padding="12dip"
      />

      <Button
        android:id="@+id/buttonPromoteTweet"
        android:text="Send a tweet"
        android:layout_width="fill_parent"
        android:layout_height="10mm" 
        style="@style/dialogTextAppearence.HighlightButton"
        android:padding="12dip"
      />

    </LinearLayout>
  </ScrollView>
</LinearLayout>


