<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroller"
    android:layout_width="350px"
    android:layout_height="wrap_content"
    android:padding="6dip"
    android:fillViewport="true" >

  <LinearLayout
    android:id="@+id/buttonLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <Button
      android:id="@+id/buttonOpenTweetReply"
      android:text="Reply Tweet"
      android:layout_height="10mm" 
      android:layout_width="fill_parent"
  	  android:clickable="true"
      style="@style/dialogTextAppearence.Button"
    />
    <Button
      android:id="@+id/buttonOpenRetweet"
      android:text="Retweet"
      android:layout_height="10mm" 
      android:layout_width="fill_parent"
  	  android:clickable="true"
      style="@style/dialogTextAppearence.Button"
    />

    <Button
      android:id="@+id/buttonOpenBrowse"
      android:text="Browse to"
      android:layout_height="10mm" 
      android:layout_width="fill_parent"
	    android:clickable="true"
      style="@style/dialogTextAppearence.Button"
    />
    <Button
      android:id="@+id/buttonMarkFavorit"
      android:text="Mark as favorit"
      android:layout_height="10mm" 
      android:layout_width="fill_parent"
      android:clickable="true"
      style="@style/dialogTextAppearence.Button"
    />

    <Button
      android:id="@+id/buttonOpenEmail"
      android:text="Send by mail"
      android:layout_height="10mm" 
      android:layout_width="fill_parent"
	    android:clickable="true"
      style="@style/dialogTextAppearence.Button"
    />

    <Button
      android:id="@+id/buttonOpenSMS"
      android:text="Send via sms"
      android:layout_height="10mm" 
      android:layout_width="fill_parent"
	    android:clickable="true"
      style="@style/dialogTextAppearence.Button"
    />

    <!--Button
      android:id="@+id/buttonOpenBluetooth"
      android:text="Send via bluetooth"
      android:layout_height="10mm" 
      android:layout_width="fill_parent"
      android:clickable="true"
      style="@style/dialogTextAppearence.Button"
    /-->

    <Button
      android:id="@+id/buttonClose"
      android:text="Close"
      android:layout_height="10mm" 
      android:layout_width="fill_parent"
	    android:clickable="true"
      style="@style/dialogTextAppearence.Button"
    />
  </LinearLayout>
</ScrollView>

